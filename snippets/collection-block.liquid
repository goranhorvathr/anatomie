{% if collection.image %}
  {% assign collection_image = collection.image %}
{% else %}
  {% assign collection_image = collection.products.first.featured_image %}
{% endif %}
<div class="product-block grid__item one-quarter small-down--one-half extra-small--one-whole" {{ extra_attrs }}>
  <div class="hover-images global-border-radius">
    <a class="product-block__image image-one" href="{{ collection.url }}">
      {% include 'responsive-image', image: collection_image %}
    </a>
  </div>
  <div class="product-block__title">
    <a href="{{ collection.url }}">{{ collection.title }}</a>
  </div>
</div>
