<div class="partnerships">
  {% for block in section.blocks %}
    {% if block.type == 'partner' %}
    <div class="partnership page-width {{ block.settings.position }}">
      <div class="partner_info">
        {% if block.settings.title != blank %}
        <h2>{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
        <div class="description">
          {{ block.settings.description }}
        </div>
        {% endif %}
      </div>
      {% if block.settings.image != blank %}
      <div class="partner_image">
        {{ block.settings.image | img_url: '700x', scale: 2 | img_tag }}
      </div>
      {% endif %}
    </div>
    {% elsif block.type == 'header' %}
    <div class="partners_header {% if block.settings.full_width %}full_width{% else %}page_width{% endif %}"{% if block.settings.background_image != blank %} style="background-image: url('{{ block.settings.background_image | img_url: '2500x' }}');"{% endif %}>
    <h1 style="font-size: {{ block.settings.font_size }}px; line-height: {{ block.settings.font_size | times: 1.3 }}px; color: {{ block.settings.font_color }}">{{ block.settings.title }}</h1>
    </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Partnerships",
  "settings": [
  ],
  "blocks": [
    {
      "type": "header",
      "name": "Header",
      "settings": [
        {
          "type": "checkbox",
          "id": "full_width",
          "label": "Full Width",
          "default": true
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "range",
          "id": "font_size",
          "label": "Font Size",
          "min": 32,
          "max": 72,
          "step": 8,
          "default": 32,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "font_color",
          "label": "Font Color",
          "default": "#FFFFFF"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        }
      ]
    },
    {
      "type": "partner",
      "name": "Partner",
      "settings": [
        {
          "type": "select",
          "id": "position",
          "label": "Image Position",
          "options": [
            {
              "label": "Left",
              "value": "left"
            },
            {
              "label": "Right",
              "value": "right"
            }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ]
}
{% endschema %}