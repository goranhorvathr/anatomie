<section class="row-fluid gutter page-width" id="brand-slider-{{ section.id }}">
  <div class="container-fluid">
    <div class="col-xs-12 col-lg-12">
        <h3 class="a-center">{{ section.settings.title }}</h3>
    </div>
    <div class="col-xs-12 col-lg-12 x-bottom-margin">
      <div class="brand-slider-{{ section.id }}">
      {% for block in section.blocks %}
        <div style="text-align: center;display: flex; align-items: center; justify-content: center; height:200px;">
          {% if block.settings.logoLink != blank %}
          <a href="{{ block.settings.logoLink }}"{% if block.settings.linkNewWindow == true %} target="_blank"{% endif %}>
            <img data-src="{{ block.settings.logoImage | img_url: 'x200' }}" class="lazy" alt="{{ block.settings.logoImage.alt }}"/>
          </a>
          {% else %}
          <img data-src="{{ block.settings.logoImage | img_url: 'x200' }}" class="lazy" alt="{{ block.settings.logoImage.alt }}"/>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function () {
    theme.jQuery('.brand-slider-{{ section.id }}').slick({
      infinite: true,
      slidesToShow: 4,
      slidesToScroll: 2,
      dots: false,
      arrows: false,
      autoplay: true,
      autoplaySpeed: 2000,
      responsive: [
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }, {
          breakpoint: 600,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1
          }
        }, {
          breakpoint: 1024,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
</script>
<style>
#brand-slider-{{ section.id }} h3 {
  text-transform: uppercase;
  margin-bottom: 10px;
  font-size: 18px;
  letter-spacing: 0px;
  line-height: 1;
  text-align: center;
}

#brand-slider-{{ section.id }} a,
#brand-slider-{{ section.id }} a:visited {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
</style>

{% schema %}
{
  "name": "Brands Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand Logos",
      "settings": [
        {
          "type": "image_picker",
          "id": "logoImage",
          "label": "Logo Image"
        },
        {
          "type": "url",
          "id": "logoLink",
          "label": "Logo Link (Optional)"
        },
        {
          "type": "checkbox",
          "id": "linkNewWindow",
          "label": "Open link in new tab",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brands Slider",
      "category": "Image"
    }
  ]
}
{% endschema %}