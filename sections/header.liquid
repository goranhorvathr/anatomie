{%- capture image_size -%}{{ section.settings.logo_width | times: 2 }}x{%- endcapture -%}


<style>
  {% if section.settings.logo != blank %}
    .store-logo--image {
      width: {{ section.settings.logo_width }}px;
    }
  {% endif %}
</style>

{%- capture logo_html -%}
  <!-- LOGO / STORE NAME -->
  {%- if template.name == 'index' -%}
    <h1 class="h1 store-logo store-logo--{% if section.settings.logo != blank %}image{% else %}text{% endif %}" itemscope itemtype="http://schema.org/Organization">
  {%- else -%}
    <div class="h1 store-logo store-logo--{% if section.settings.logo != blank %}image{% else %}text{% endif %}" itemscope itemtype="http://schema.org/Organization">
  {%- endif -%}

  <!-- DESKTOP LOGO -->
  <a href="/" itemprop="url" class="desktop-logo site-logo{% if section.settings.logo != blank %} site-header__logo-image{% endif %}">
    {%- if section.settings.logo != blank -%}
      <img src="{{ section.settings.logo | img_url: image_size }}"
          alt="{{ section.settings.logo.alt | default: shop.name }}"
          itemprop="logo">
    {%- else -%}
      {{ shop.name }}
    {%- endif -%}
  </a>

  <!-- MOBILE LOGO -->
  <a href="/" itemprop="url" class="mobile-logo site-logo{% if section.settings.mobile_logo != blank or section.settings.logo != blank %} site-header__logo-image{% endif %}">
    {%- if section.settings.mobile_logo != blank -%}
      <img src="{{ section.settings.mobile_logo | img_url: image_size }}"
          alt="{{ section.settings.mobile_logo.alt | default: shop.name }}"
          itemprop="logo">
    {%- elsif section.settings.logo != blank -%}
        <img src="{{ section.settings.logo | img_url: image_size }}"
          alt="{{ section.settings.logo.alt | default: shop.name }}"
          itemprop="logo">
    {%- else -%}
      {{ shop.name }}
    {%- endif -%}
  </a>

  {%- if template.name == 'index' -%}
    </h1>
  {%- else -%}
    </div>
  {%- endif -%}
{%- endcapture -%}

{%- if template == 'gift_card' -%}

  <div class="site-header site-header--logo-only">
    <header class="header-content container">
      <div class="page-header page-width">
        {{ logo_html }}
      </div>
    </header>
  </div>

{%- else -%}

  <div class="site-header {% if section.settings.dock_nav %}docking-header{% endif %}" data-section-id="{{ section.id }}" data-section-type="header" role="banner">

    {% if section.settings.show_announcement_bar %}
      <style>
      .announcement-bar__content {
        color: {{ section.settings.announcement_bar_txt_color }};
        background-color: {{ section.settings.announcement_bar_bck_color }};
      }
      a.announcement-bar__content:hover {
        color: {{ section.settings.announcement_bar_txt_color }};
        background-color: {{ section.settings.announcement_bar_bck_color | color_darken: 10 }};
      }
      </style>
      <section class="announcement-bar">
        {% if section.settings.announcement_bar_url != blank %}
        <a href="{{ section.settings.announcement_bar_url }}" class="announcement-bar__content container">{{ section.settings.announcement_bar_text }}</a>
        {% else %}
        <div class="announcement-bar__content container">{{ section.settings.announcement_bar_text }}</div>
        {% endif %}
      </section>
    {% endif %} 

    <header class="header-content container">
      
      <div class="page-header page-width">
        
        <div class="utils header_left_svgs">
          
          <div class="anatomie_svg">
            <a href="/">
              {% include 'icon-anatomie-svg' %}
            </a>
            {% if section.settings.anatomie_tooltip_enabled %}
            <div class="tooltip_div">
              <div class="inner_tooltip_flex"><a href="{{ section.settings.anatomie_hover_one }}">{{ section.settings.anatomie_hover_one_title }}</a></div>
              <div class="inner_tooltip_flex"><a href="{{ section.settings.anatomie_hover_two }}">{{ section.settings.anatomie_hover_two_title }}</a></div>
            </div>
            {% endif %}
          </div>
          
          <div class="phone_icon">
            
            	{% include 'icon-phone-svg' %}
            
            <div class="tooltip_div">
              <b>CONTACT US</b>
              {% for block in section.blocks %}
              {% if block.type == 'hover_tooltip' and block.settings.icon == 'phone' %}
                {% if block.settings.link != blank %}<a {% if block.settings.enable_modal %}id="enableModal"{% endif %} href="{{ block.settings.link }}">{% endif %}
                  {% if block.settings.icon-type != 'none' %}
                    {% case block.settings.icon-type %}
                      {% when 'phone' %}
                        {% include 'icon-phone-svg-noborder' %}
                      {% when 'email' %}
                      {% include 'icon-email' %}
                      {% when 'facetime' %}
                      {% if block.settings.enable_modal %}
                        {% include 'icon-facetime', class: 'icon facetime_small' %}
                      {% else %}
                        {% include 'icon-facetime' %}
                      {% endif %}
                      
                      {% endcase %}
                      {% endif %}
                  {{ block.settings.title }}
                {% if block.settings.link != blank %}</a>{% endif %}
              {% endif %}
            {% endfor %}
            </div>
          </div>

          {% if section.settings.show_catalog %}
          <div class="catalog_icon">
            <a {% if section.settings.catalog_new_tab %}target="_blank"{% endif %} href="{{ section.settings.catalog_link }}">
              {% include 'icon-catalog' %}
            </a>
          </div>
          {% endif %}
        </div>
        
        

        <div class="desktop_logo">
            <a href="/" itemprop="url" class="desktop-logo site-logo{% if section.settings.logo != blank %} site-header__logo-image{% endif %}">
          		{% include 'icon-anatomie-main-logo' %}
          	</a>
        </div>

        {% if section.settings.dock_nav %}
        <div class="docked-mobile-navigation-container">
        <div class="docked-mobile-navigation-container__inner">
        {% endif %}

        <div class="utils relative">
          <!-- MOBILE BURGER -->
          <button class="btn btn--plain burger-icon feather-icon js-mobile-menu-icon hide-for-search" aria-label="{{ 'general.accessibility_labels.menu_toggle' | t }}">
            {% include 'feather-menu' %}
          </button>

		  <!--   Mobile Logo   -->
          <div class="mobile_logo">
            <a href="/">
              {% include 'icon-anatomie-main-logo' %}
            </a>
          </div>

          
          <!-- DESKTOP SEARCH -->
          {% if section.settings.show_search_bar %}
            {% capture search_bar_class %}settings-open-bar desktop-only{% if settings.enable_live_search %} live-search{% if settings.live_search_show_price %} live-search--show-price{% endif %}{% if settings.live_search_show_vendor %} live-search--show-vendor{% endif %}{% endif %}{% endcapture %}
            {% include 'search-bar', settings_class: search_bar_class, search_id: 'open-search-bar' %}
          {% endif %}


          {% if shop.enabled_currencies != blank and shop.enabled_currencies.size > 1 %}
            <!-- CURRENCY -->
            <div class="utils__item utils__item--currency hide-for-search">
              <div class="currency-converter currency-converter--native">
                <span class="currency-converter__selected selected-currency">
                  {{- cart.currency.iso_code | default: shop.currency -}}
                </span>
                <span class="currency-converter__icon feather-icon">{% include 'feather-chevron-down' %}</span>
                <div class="currency-converter__dropdown">
                  {% form 'currency' %}
                    <select name="currency" onchange="this.form.submit()" aria-label="Currency">
                      {%- for currency in shop.enabled_currencies -%}
                        <option {% if currency == cart.currency %}selected="true"{% endif %}>{{ currency.iso_code }}</option>
                      {%- endfor -%}
                    </select>
                  {% endform %}
                </div>
              </div>
            </div>
          {% elsif settings.enable_theme_currency_converter %}
            <!-- CURRENCY -->
            <div class="utils__item utils__item--currency hide-for-search">
              <div class="currency-converter currency-converter--theme">
                <span class="currency-converter__selected selected-currency">
                  {{ shop.currency }}
                </span>
                <span class="currency-converter__icon feather-icon">{% include 'feather-chevron-down' %}</span>
                <div class="currency-converter__dropdown">
                  <select name="currencies" aria-label="Currency">
                    {%- assign codes = 'AED,ALL,AMD,ANG,AOA,ARS,AUD,AWG,AZN,BAM,BBD,BDT,BGN,BHD,BND,BOB,BRL,BSD,BTN,BWP,BYR,BZD,CAD,CHF,CLP,CNY,COP,CRC,CZK,DKK,DOP,DZD,EGP,ETB,EUR,FJD,GBP,GEL,GHS,GMD,GTQ,GYD,HKD,HNL,HRK,HUF,IDR,ILS,INR,ISK,JEP,JMD,JOD,JPY,KES,KGS,KHR,KRW,KWD,KYD,KZT,LBP,LKR,LTL,LVL,MAD,MDL,MGA,MKD,MMK,MNT,MOP,MUR,MVR,MXN,MYR,MZN,NAD,NGN,NIO,NOK,NPR,NZD,OMR,PEN,PGK,PHP,PKR,PLN,PYG,QAR,RON,RSD,RUB,RWF,SAR,SCR,SEK,SGD,STD,SYP,THB,TND,TRY,TTD,TWD,TZS,UAH,UGX,USD,UYU,VEF,VND,VUV,WST,XAF,XBT,XCD,XOF,XPF,ZAR,ZMW' | split: ',' -%}
                    {%- assign supported_codes = settings.supported_currencies | split: ' ' -%}
                    <option value="{{ shop.currency }}" selected="selected">{{ shop.currency }}</option>
                    {%- for code in supported_codes -%}
                      {%- if code != shop.currency and codes contains code -%}
                        <option value="{{ code }}">{{ code }}</option>
                      {%- endif -%}
                    {%- endfor -%}
                  </select>
                </div>
              </div>
            </div>
          {% endif %}

          {% unless section.settings.show_search_bar %}
          <!-- DESKTOP SEARCH -->
            <a href="/search" class="plain-link utils__item hide-for-search desktop-only js-search-form-open" aria-label="{{ 'general.accessibility_labels.search' | t | escape }}">
              <span class="feather-icon icon--header">
                {% include 'feather-search' %}
              </span>
              <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
            </a>
            {% capture search_bar_class %}settings-closed-bar desktop-only{% if settings.enable_live_search %} live-search{% if settings.live_search_show_price %} live-search--show-price{% endif %}{% if settings.live_search_show_vendor %} live-search--show-vendor{% endif %}{% endif %}{% endcapture %}
            {% include 'search-bar', settings_class: search_bar_class, search_id: 'closed-search-bar' %}
          {% endunless %}

          <!-- MOBILE SEARCH WHEN MENU IS CLOSED -->
          <div class="utils__item hide-for-search mobile-search">
            <a href="/search" class="plain-link feather-icon icon--header js-search-form-open" aria-label="{{ 'general.accessibility_labels.search' | t | escape }}">
              {% include 'feather-search' %}
            </a>
            <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
          </div>
          {% include 'search-bar', settings_class: 'mobile-search', search_id: 'mobile-search-bar' %}
          
          <!-- ACCOUNT -->
          {% if shop.customer_accounts_enabled %}
            <div class="utils__item customer-account hide-for-search">
              <a href="/account" class="customer-account__parent-link feather-icon icon--header" aria-haspopup="true" aria-expanded="false" aria-label="{{ 'general.accessibility_labels.account' | t | escape }}">{% include 'icon-account' %}</a>
              <ul class="customer-account__menu">
                {% if customer %}
                  {% comment %}
                  <li class="customer-account__link">
                    {% if customer.first_name != blank %}
                      {% capture first_name %}<a href="/account">{{ customer.first_name }}</a>{% endcapture %}
                      {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}
                    {% endif %}
                  </li>
                  {% endcomment %}
                  <li class="customer-account__link">
                    <a href="/account">{{ 'layout.customer.account' | t }}</a>
                  </li>
                  <li class="customer-account__link">
                    {{ 'layout.customer.log_out' | t | customer_logout_link }}
                  </li>
                {% else %}
                  <li class="customer-account__link">
                    {{ 'layout.customer.log_in' | t | customer_login_link }}
                  </li>
                  <li class="customer-account__link">
                    {{ 'layout.customer.create_account' | t | customer_register_link }}
                  </li>
                {% endif %}
              </ul>
            </div>
          {% endif %}
          
          <!-- CART -->
          {% capture cart_html %}
          <div class="utils__item header-cart hide-for-search">
            <a href="/cart">
              <span class="feather-icon icon--header">{% include 'feather-bag' %}</span>
              <span class="header-cart__count">{{ cart.item_count }}</span>
            </a>
            {% unless cart.items == empty or template contains 'cart' %}
              <div class="cart-summary global-border-radius">
                <div class="cart-summary__header">{{ 'layout.cart.title' | t }}</div>
                <div class="cart-summary__product-list">
                  {% for item in cart.items %}
                    <div class="cart-summary__product">
                      <div class="cart-summary__product-image">
                        {% include 'responsive-image', image: item.image %}
                      </div>
                      <div class="cart-summary__product__description">
                        <div class="cart-summary__product-title">
                          {{ item.product.title | link_to: item.product.url }}
                          {% if item.quantity > 1 %}
                            <span class="cart-summary__quantity">{{ item.quantity }}</span>
                          {% endif %}
                        </div>
                        <div class="cart-summary__product__variants">
                          {% for option in item.product.options %}
                            {% capture value_key %}option{{ forloop.index }}{% endcapture %}
                            {% if item.variant[value_key] != 'Default Title' %}
                              <div class="added-notice__variant">
                                <span class="added-notice__variant-label">{{ option }}:</span>
                                <span class="added-notice__variant-value">{{ item.variant[value_key] }}</span>
                              </div>
                            {% endif %}
                          {% endfor %}
                        </div>
                        <div class="cart-summary__price">
                          {% if item.original_line_price != item.final_line_price %}
                          <span class="product-price__reduced theme-money">{{ item.final_line_price | money }}</span>
                            <span class="product-price__compare theme-money">{{ item.original_line_price | money }}</span>
                          {% else %}
                            <span class="theme-money">{{ item.final_line_price | money }}</span>
                          {% endif %}

                          {% if item.line_level_discount_allocations.size > 0 %}
                            <ul class="cart-discount-list small-text">
                            {% for discount_allocation in item.line_level_discount_allocations %}
                              <li class="cart-discount cart-discount--inline">
                                <span class="cart-discount__label">{{ discount_allocation.discount_application.title }}</span>
                                <span class="cart-discount__amount theme-money">{{ discount_allocation.amount | money }}</span>
                              </li>
                            {% endfor %}
                            </ul>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  {% endfor %}
                </div>
                <div class="cart-summary__footer">
                  <div class="cart-summary__total-quantity-row">
                    <span>{{ 'layout.cart.items' | t }}</span>
                    <span>{{ cart.item_count }}</span>
                  </div>

                  {%- if cart.cart_level_discount_applications != blank -%}
                    <ul class="cart-discount-list">
                      {%- for discount_application in cart.cart_level_discount_applications -%}
                        <li class="cart-discount cart-discount--inline">
                          <span class="cart-discount__label">{{ discount_application.title }}</span>
                          <span class="cart-discount__amount theme-money">{{ discount_application.total_allocated_amount | money }}</span>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}

                  <div class="cart-summary__total-price-row">
                    <span>{{ 'layout.cart.subtotal' | t }}</span>
                    <span class="theme-money">{{ cart.total_price | money }}</span>
                  </div>

                  <a class="btn btn--primary btn--small btn--fullwidth cart-summary__button" href="/cart">{{ 'layout.cart.go_to_cart' | t }}</a>
                </div>
              </div>
            {% endunless %}
          </div>
          {% endcapture %}
          {{ cart_html }}
        </div>

        {% if section.settings.dock_nav %}
        </div>
        </div>
        {% endif %}
      </div>
    </header>

    {% if section.settings.dock_nav %}
    <div class="docked-navigation-container">
    <div class="docked-navigation-container__inner">
    {% endif %}

    <section class="header-navigation">
      <nav class="navigation__container page-width">

        <!-- MOBILE MENU UTILS -->
        <div class="mobile-menu-utils">
          <!-- MOBILE MENU CURRENCY CONVERTER -->
          {% if shop.enabled_currencies != blank and shop.enabled_currencies.size > 1 %}
          <div class="utils__item utils__item--currency hide-for-search">
              <div class="currency-converter currency-converter--native">
                <span class="currency-converter__selected selected-currency">
                  {{- cart.currency.iso_code | default: shop.currency -}}
                </span>
                <span class="currency-converter__icon feather-icon">{% include 'feather-chevron-down' %}</span>
                <div class="currency-converter__dropdown">
                  {% form 'currency' %}
                    <select name="currency" onchange="this.form.submit()" aria-label="Currency">
                      {%- for currency in shop.enabled_currencies -%}
                        <option {% if currency == cart.currency %}selected="true"{% endif %}>{{ currency.iso_code }}</option>
                      {%- endfor -%}
                    </select>
                  {% endform %}
                </div>
              </div>
            {% elsif settings.enable_theme_currency_converter %}
              <div class="currency-converter currency-converter--theme">
                <span class="currency-converter__selected selected-currency">
                  {{- shop.currency -}}
                </span>
                <span class="currency-converter__icon feather-icon">{% include 'feather-chevron-down' %}</span>
                <div class="currency-converter__dropdown">
                  <select name="currencies" aria-label="Currency">
                    {%- assign codes = 'AED,ALL,AMD,ANG,AOA,ARS,AUD,AWG,AZN,BAM,BBD,BDT,BGN,BHD,BND,BOB,BRL,BSD,BTN,BWP,BYR,BZD,CAD,CHF,CLP,CNY,COP,CRC,CZK,DKK,DOP,DZD,EGP,ETB,EUR,FJD,GBP,GEL,GHS,GMD,GTQ,GYD,HKD,HNL,HRK,HUF,IDR,ILS,INR,ISK,JEP,JMD,JOD,JPY,KES,KGS,KHR,KRW,KWD,KYD,KZT,LBP,LKR,LTL,LVL,MAD,MDL,MGA,MKD,MMK,MNT,MOP,MUR,MVR,MXN,MYR,MZN,NAD,NGN,NIO,NOK,NPR,NZD,OMR,PEN,PGK,PHP,PKR,PLN,PYG,QAR,RON,RSD,RUB,RWF,SAR,SCR,SEK,SGD,STD,SYP,THB,TND,TRY,TTD,TWD,TZS,UAH,UGX,USD,UYU,VEF,VND,VUV,WST,XAF,XBT,XCD,XOF,XPF,ZAR,ZMW' | split: ',' -%}
                    {%- assign supported_codes = settings.supported_currencies | split: ' ' -%}
                    <option value="{{ shop.currency }}" selected="selected">{{ shop.currency }}</option>
                    {%- for code in supported_codes -%}
                      {%- if code != shop.currency and codes contains code -%}
                        <option value="{{ code }}">{{ code }}</option>
                      {%- endif -%}
                    {%- endfor -%}
                  </select>
                </div>
              </div>
          </div>
          {% endif %}
          <!-- Anatomie Logo -->
          <a href="/">
            {% include 'icon-anatomie-main-logo' %}
          </a>
          <!-- MOBILE MENU CLOSE -->
          <button class="btn btn--plain close-mobile-menu js-close-mobile-menu" aria-label="{{ 'general.accessibility_labels.close' | t }}">
            <span class="feather-icon icon--header">
              {% include 'feather-x' %}
            </span>
          </button>
        </div>

        <!-- MOBILE MENU SEARCH BAR -->
        <div class="mobile-menu-search-bar">
          {% include 'search-bar', settings_class: 'mobile-menu-search', search_id: 'mobile-menu-search' %}
        </div>

        <!-- MOBILE MENU -->
        <ul class="nav mobile-site-nav">
          {% assign linklist = linklists[section.settings.main_linklist] %}

          {% if section.settings.mobile_linklist != blank %}
            {% assign linklist = linklists[section.settings.mobile_linklist] %}
          {% endif %}

          {% for link in linklist.links %}
            <li class="mobile-site-nav__item">
              <a href="{{ link.url }}" class="mobile-site-nav__link mm_top_level">
                {{ link.title | replace: '||', '' }}
              </a>
              {% if link.links != blank %}
                <button class="btn--plain feather-icon mobile-site-nav__icon mm_top_level" aria-label="{{ 'general.accessibility_labels.open_dropdown' | t }}">{% include 'feather-chevron-down' %}</button>
              {% endif %}
              {% if link.links != blank %}
                <ul class="mobile-site-nav__menu">
                  {% for childlink in link.links %}
                    <li class="mobile-site-nav__item">
                      <a href="{{ childlink.url }}" class="mobile-site-nav__link mm_top_level">
                        {{ childlink.title | replace: '||', '' }}
                      </a>
                      {% if childlink.links != blank %}
                        <button class="btn--plain feather-icon mobile-site-nav__icon" aria-haspopup="true" aria-expanded="false" aria-label="{{ 'general.accessibility_labels.open_dropdown' | t }}">{% include 'feather-chevron-down' %}</button>
                      {% endif %}
                      {% if childlink.links != blank %}
                        <ul class="mobile-site-nav__menu">
                          {% for childestlink in childlink.links %}
                            <li class="mobile-site-nav__item">
                              <a href="{{ childestlink.url }}" class="mobile-site-nav__link">
                                {{ childestlink.title | replace: '||', '' }}
                              </a>
                            </li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
        {% if shop.customer_accounts_enabled %}
        {% comment %}
        <div class="mobile-account">
          {% if customer %}
          <a href="/account">Account</a>
          <a href="/account/logout">Log Out</a>
          {% else %}
          <a href="/account/login">Login</a>
          <a href="/account/register">Create Account</a>
          {% endif %}
        </div>
        {% endcomment %}
        <ul class="nav mobile-site-nav">
          {% if customer %}
          <li class="mobile-site-nav__item">
            <a class="mobile-site-nav__link mm_top_level" href="/account">ACCOUNT</a>
          </li>
          <li class="mobile-site-nav__item">
            <a class="mobile-site-nav__link mm_top_level" href="/account/logout">LOG OUT</a>
          </li>
          {% else %}
          <li class="mobile-site-nav__item">
            <a class="mobile-site-nav__link mm_top_level" href="/account/login">LOG IN</a>
          </li>
          <li class="mobile-site-nav__item">
            <a class="mobile-site-nav__link mm_top_level" href="/account/register">CREATE ACCOUNT</a>
          </li>
          {% endif %}
        </ul>
        {% endif %}
        <div class="header-social-icons">
          {% include 'social-icons' %}
        </div>

        <!-- MAIN MENU -->
        <ul class="nav site-nav">
          {% for link in linklists[section.settings.main_linklist].links %}
            {% if link.links != blank %}
              {% assign dropdown_type = 'mega' %}

               {% for childlink in link.links %}
                  {% if childlink.links %}
          			{% else %}
                    {% assign dropdown_type = 'small' %}
                  {% endif %}
                {% endfor %}

              <li class="site-nav__item site-nav__item--has-dropdown
                        {% if link.active %}site-nav__item--active{% endif %}
                        site-nav__item--{{ dropdown_type }}dropdown">
                <a href="{{ link.url }}" class="site-nav__link" aria-haspopup="true" aria-expanded="false">
                  {{ link.title }}
<!--                   <span class="feather-icon site-nav__icon">{% include 'feather-chevron-down' %}</span> -->
                </a>

                {%- assign has_promo = false -%}
                {%- assign promoReverse = false -%}
                {%- for block in section.blocks -%}
                  {%- capture setting_link_title_dcase -%}{{ block.settings.dropdown_link_title | downcase | strip }}{%- endcapture -%}
                  {%- capture link_title_dcase -%}{{ link.title | downcase | strip }}{%- endcapture -%}
                  {%- if setting_link_title_dcase == link_title_dcase -%}
                    {%- assign has_promo = true -%}
                    {%- assign promo_block = block -%}

                    {%- if block.settings.reverse_content -%}
                    {%- assign promoReverse = true -%}
                  {%- endif -%}
