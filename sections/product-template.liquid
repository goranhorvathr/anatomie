                    <input class="quantity-actual" type="text" id="Quantity" name="quantity" value="1">
                  </div>

                  {% assign show_preorder_button = false %}

                  {% for tag in product.tags %}
                    {% assign tag_upper = tag | upcase %}
                    {% if tag_upper == 'KL-PREORDER' %}
                      {% assign show_preorder_button = true %}
                      {% break %}
                    {% endif %}
                  {% endfor %}
                  {% if section.settings.enable_payment_button %}<div class="payment-buttons">{% endif %}
                    {% if product.handle != 'e-gift-card' %}
                    {% include 'bis-widget' %}
                    {% endif %}
                    <button
                      class="btn {% if section.settings.enable_payment_button %}btn--secondary{% else %}btn--subtle-hover{% endif %}"
                      type="submit"
                      name="add"
                      data-add-to-cart
                      {% if product.tags contains 'pre-order' %}pre-order="true"{% endif %}
                      {% unless current_variant.available %}disabled="disabled"{% endunless %}>
                        <span data-add-to-cart-text>
                          {% if product.tags contains 'pre-order' %}
                            {{ 'products.product.pre_order' | t  }}
                            {% else %}
                              {% if current_variant.available %}
                                {{ 'products.product.add_to_cart' | t }}
                              {% else %}
                                {{ 'products.product.sold_out' | t }}
                              {% endif %}
                          {% endif %}
                          
                        </span>
                    </button>
                  
{%comment%}
                    {% if section.settings.enable_payment_button %}
                      {{ form | payment_button }}
                    {% endif %}
                    {% endcomment %}
                  {% if section.settings.enable_payment_button %}</div>{% endif %}
                </div> 
                {% if settings.klarna %}
                  {%- include 'klarna-messaging', type: 'pdp' -%}
                {% endif %}
              
              {% endif %}
              
              
              
                
                
              {% endform %}
              
            </div>

            {% if product.tags contains 'pre-order' and product.metafields.global.preorder != blank %}
                  <div class="preorder-details" style="font-weight: 600;">{{ product.metafields.global.preorder }}</div>
                {% endif %}
            {% comment %}{% capture backorder_message %}{{ 'products.product.backorder' | t }}{% endcapture %}
                {% unless backorder_message == blank %}
                  {% if current_variant.inventory_management == 'shopify' and current_variant.inventory_quantity < 1 %}
                    <div class="backorder">
                      <p>
                        <span class="backorder__variant">
                          {{ product.title }}
                          {% unless current_variant.title contains 'Default' %}- {{ current_variant.title }}{% endunless %}
                        </span>
                        {{ 'products.product.backorder' | t }}
                      </p>
                    </div>
                  {% else %}
                    <div class="backorder hidden">
                      <p><span class="backorder__variant"></span> {{ 'products.product.backorder' | t }}</p>
                    </div>
                  {% endif %}
                {% endunless %}{% endcomment %}
            
            {% if section.settings.description_position == 'below_cart' %}
              {{ product_description }}
            {% endif %}

            {% comment %}
            {% if section.settings.show_share_buttons %}
              {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
            {% endif %}
            {% endcomment %}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container row">
    <div class="reading-width reading-width--no-mobile-padding">
      {% if section.settings.description_position == 'row' %}
        {{ product_description }}
      {% endif %}
    </div>
    {% comment %}OLD JUDGEME LOCATION{% endcomment %}
  </div>

  {% unless product == empty %}
    <script type="application/json" data-product-json>
      {{ product | json }}
    </script>
  {% endunless %}
</div>

{% if settings.swatch_enabled and settings.swatch_method == 'images' %}
<style>
{%- for option in product.options -%}
  {%- if option == settings.swatch_option_name -%}
    {%- capture value_key -%}option{{ forloop.index }}{%- endcapture -%}
    {%- capture colours -%},{%- endcapture -%}
    {%- for variant in product.variants -%}
      {%- capture colour_compare -%},{{ variant[value_key] }},{%- endcapture -%}
      {%- unless colours contains colour_compare -%}
        {%- capture colours -%}{{ colours }}{{ variant[value_key] }},{%- endcapture -%}
      {%- endunless -%}
    {%- endfor -%}

    {%- assign colours = colours | split: ',' -%}
    {%- assign non_blank_colours = 0 -%}
    {%- for colour in colours -%}
      {%- unless colour == blank -%}
        {%- if settings.variant_style == 'listed' -%}
        {% assign color_name = 'color-' | append: colour | handle | append: '.png' %}
        select[data-colour-swatch="true"] + .clickyboxes .opt--{{ colour | handle }}::after {
          background-image: url({{ color_name | file_img_url }});
