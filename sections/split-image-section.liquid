<style>
  {% for block in section.blocks %}
    {% capture current %}{% cycle 1, 2 %}{% endcapture %}
    .section-{{ section.id }}.split-image-section .block-{{ current }} .overlay {
      top: {{ block.settings.overlay_position_y }}%;
      left: {{ block.settings.overlay_position_x }}%;
    }
    .section-{{ section.id }}.split-image-section .block-{{ current }} .image-product-label {
      top: {{ block.settings.label_position_y }}%;
      left: {{ block.settings.label_position_x }}%;
    }
    .section-{{ section.id }}.split-image-section .block-{{ current }} .image-product-label-two {
      top: {{ block.settings.label_position_y_two }}%;
      left: {{ block.settings.label_position_x_two }}%;
    }
    .section-{{ section.id }}.split-image-section .block-{{ current }} .image-product-label-three {
      top: {{ block.settings.label_position_y_three }}%;
      left: {{ block.settings.label_position_x_three }}%;
    }
  {% endfor %}
</style>

<section class="container container--no-mobile-padding large-row split-image-section section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="split-image">
  <div class="page-width">
    <div class="grid">
      {% for block in section.blocks %}
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        <div class="grid__item one-half small-down--one-whole block-{{ current }}" {{ block.shopify_attributes }}>
          <div class="relative avoid-overlaps global-border-radius split-image__content-container">
            <div class="avoid-overlaps__mobile-container">
              {% if block.settings.image_link != blank %}<a href="{{ block.settings.image_link }}">{% endif %}
              {% if block.settings.image == blank %}
                <div class="split-image">
                  {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% else %}
                <div class="split-image split-image-{{ current }} {% if section.settings.aspect_ratio == 'portrait' %} split-image--portrait{% else %} split-image--square{% endif %} rimage-background fade-in lazy"
                    data-bg="{{ block.settings.image | img_url: 'master' }}"
                    data-sizes="auto"
                    data-parent-fit="cover">
                  <noscript>
                    <img src="{{ block.settings.image | img_url: '1024x1024' }}" alt="{{ block.settings.image.alt | escape }}" class="rimage-background__image">
                  </noscript>
                </div>
              {% endif %}
              {% if block.settings.image_link != blank %}</a>{% endif %}

              {% if block.settings.product_id != blank %}
                {% assign product_label = all_products[block.settings.product_id] %}
                {% capture current_number %}{{ current }}{% endcapture %}
                {% assign quickbuy_toggle = settings.quickbuy_labels_toggle %}
                {% include 'image-product-label',
                          css_class: 'image-product-label',
                          show_chevron: block.settings.show_chevron,
                          chevron: block.settings.chevron_position,
                          quickbuy: quickbuy_toggle,
                          color_bg: block.settings.color_label_background,
                          color_text: block.settings.color_label_text %}
              {% endif %}
              {% if block.settings.product_id_two != blank %}
                {% assign product_label = all_products[block.settings.product_id_two] %}
                {% capture current_number %}{{ current }}{% endcapture %}
                {% assign quickbuy_toggle = settings.quickbuy_labels_toggle %}
                {% include 'image-product-label',
                          css_class: 'image-product-label image-product-label-two',
                          show_chevron: block.settings.show_chevron_two,
                          chevron: block.settings.chevron_position_two,
                          quickbuy: quickbuy_toggle,
                          color_bg: block.settings.color_label_background_two,
                          color_text: block.settings.color_label_text_two %}
              {% endif %}
              {% if block.settings.product_id_three != blank %}
              {% assign product_label = all_products[block.settings.product_id_three] %}
              {% capture current_number %}{{ current }}{% endcapture %}
              {% assign quickbuy_toggle = settings.quickbuy_labels_toggle %}
              {% include 'image-product-label',
                        css_class: 'image-product-label image-product-label-three',
                        show_chevron: block.settings.show_chevron_three,
                        chevron: block.settings.chevron_position_three,
                        quickbuy: quickbuy_toggle,
                        color_bg: block.settings.color_label_background_three,
                        color_text: block.settings.color_label_text_three %}
              {% endif %}
            </div>

            {% include 'image-overlay',
              background_color: block.settings.color_overlay_background,
              text_color: block.settings.color_overlay_text,
              title: block.settings.overlay_title,
              url: block.settings.overlay_url,
              url_text: block.settings.overlay_url_text,
              url_style: block.settings.overlay_url_style,
              ignoreJS: true %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

