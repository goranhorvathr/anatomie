/*================ Spacing helper on uniform grids ================*/
@mixin grid-uniform-row-gutters($breakpoint: '', $gutter: $grid-gutter) {
  .grid--uniform-row-gutters {
    .#{$breakpoint}one-whole:nth-child(n+2),
    .#{$breakpoint}one-half:nth-child(n+3),
    .#{$breakpoint}one-third:nth-child(n+4),
    .#{$breakpoint}one-quarter:nth-child(n+5),
    .#{$breakpoint}one-fifth:nth-child(n+6),
    .#{$breakpoint}one-sixth:nth-child(n+7),
    .#{$breakpoint}two-sixths:nth-child(n+4),
    .#{$breakpoint}three-sixths:nth-child(n+3),
    .#{$breakpoint}one-eighth:nth-child(n+9),
    .#{$breakpoint}two-eighths:nth-child(n+5),
    .#{$breakpoint}four-eighths:nth-child(n+3),
    .#{$breakpoint}five-tenths:nth-child(n+3),
    .#{$breakpoint}one-twelfth:nth-child(n+13),
    .#{$breakpoint}two-twelfths:nth-child(n+7),
    .#{$breakpoint}three-twelfths:nth-child(n+5),
    .#{$breakpoint}four-twelfths:nth-child(n+4),
