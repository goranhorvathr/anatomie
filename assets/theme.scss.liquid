.site-nav {
  display: flex;
  justify-content: space-around;
  margin: 0 0 0 (-$header-nav-bar-padding);
  padding: 0;
  width: 100%;
  white-space: nowrap;
  overflow-x: hidden; // prevent forcing width larger than container can handle

  > .site-nav__item {
    display: inline-block;
    font-size: $nav-font-size;
  }

  .site-nav__link {
    display: block;
    text-decoration: none;
  }

  > .site-nav__item > .site-nav__link {
    position: relative;
    padding: 0 $single-padding $header-nav-bar-padding $single-padding;
    color: $color-main-nav-text;

    &:hover {
      color: $color-main-nav-text;
    }
  }

  .site-nav__invisible {
    right: 0;
  }
}

.site-nav > .site-nav__item > .site-nav__link {
  &::after {
    background-color: $color-main-nav-text;
    bottom: 0;
    //content: ''; //uncomment this for the underline effect to work
    height: $nav-lines;
    left: 0;
    position: absolute;
    transform: scaleY(0);
    transition: transform $standard-transition-timing;
    transform-origin: bottom;
    width: 100%;
  }
}

.site-nav__item:hover .site-nav__link:after {
  transform: scaleY(1);
}

.site-nav__item.site-nav--active .site-nav__link:after {
  transform: scaleY(1);
}

.site-nav__icon {
  display: inline-block;
  vertical-align: middle;
  position: relative;
  margin-left: 0.1em;
  height: 1em;
  width: $nav-chevrons;

  .icon {
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -$nav-chevrons/2;
    height: $nav-chevrons;
    width: $nav-chevrons;
  }
