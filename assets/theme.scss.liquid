/*================ Links & Buttons ================*/
button button:not(.plyr__control),
input[type="submit"],
.btn,
.btn--primary, {
  @include prefix('user-select', 'none', moz ms webkit spec);
  @include prefix(appearance, none, webkit moz spec);
  margin: 1px;
  display: inline-block;
  font-size: $button-font-size;
  line-height: $button-line-height;
  min-width: $button-min-width;
  padding: $button-padding;
  text-align: center;
  text-decoration: none;
  vertical-align: middle;
  width: auto;
  border-radius: $button-border-radius;
  border: 0;

  // must use box-shadow instead of border, for webkit rounding errors
  box-shadow: 0 0 0 1px $primary-btn-border;
  background-color: $primary-btn-background;
  color: $primary-btn-text;
  transition: background-color $standard-transition-timing,
              color $standard-transition-timing,
